{
  "name": "universal-music-downloader",
  "private": true,
  "type": "module",
  "version": "1.0.0",
  "main": "dist-electron/main.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/Wirthzig/universal-music-downloader"
  },
  "author": "Alexander Wirths",
  "description": "Download Music from Spotify, SoundCloud, and YouTube",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build && electron-builder",
    "checksum": "node scripts/generate_checksum.js",
    "preview": "vite preview"
  },
  "dependencies": {
    "axios": "^1.7.9",
    "electron-log": "^5.4.3",
    "electron-updater": "^6.6.2",
    "framer-motion": "^11.15.0",
    "lucide-react": "^0.469.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "youtubei.js": "^16.0.1"
  },
  "devDependencies": {
    "@types/react": "^18.3.18",
    "@types/react-dom": "^18.3.5",
    "@vitejs/plugin-react": "^4.3.4",
    "autoprefixer": "^10.4.20",
    "concurrently": "^9.1.0",
    "cross-env": "^7.0.3",
    "electron": "^33.2.1",
    "electron-builder": "^25.1.8",
    "postcss": "^8.4.49",
    "tailwindcss": "^3.4.17",
    "typescript": "^5.7.2",
    "vite": "^5.4.11",
    "vite-plugin-electron": "^0.29.0",
    "vite-plugin-electron-renderer": "^0.14.6",
    "wait-on": "^7.2.0"
  },
  "build": {
    "appId": "com.wirthzig.universalmusicdownloader",
    "productName": "Universal Music Downloader",
    "publish": [
      {
        "provider": "github",
        "owner": "Wirthzig",
        "repo": "universal-music-downloader"
      }
    ],
    "directories": {
      "output": "dist_app"
    },
    "mac": {
      "target": "dmg",
      "category": "public.app-category.music",
      "icon": "src/assets/main-logo.png",
      "artifactName": "${productName}-v${version}-macOS-Silicon.${ext}"
    },
    "dmg": {
      "iconSize": 120,
      "contents": [
        {
          "x": 130,
          "y": 220
        },
        {
          "x": 410,
          "y": 220,
          "type": "link",
          "path": "/Applications"
        }
      ]
    },
    "files": [
      "dist/**/*",
      "dist-electron/**/*"
    ]
  }
}